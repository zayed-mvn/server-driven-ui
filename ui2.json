{
  "type": "scrollview",
  "properties": {
    "padding": 16
  },
  "child": {
    "type": "column",
    "properties": {
      "crossAxisAlignment": "stretch"
    },
    "children": [
      {
        "type": "card",
        "properties": {
          "elevation": 4,
          "borderRadius": 12,
          "margin": { "bottom": 20 }
        },
        "child": {
          "type": "container",
          "properties": {
            "padding": 20,
            "color": "#4A90E2"
          },
          "child": {
            "type": "row",
            "properties": {
              "mainAxisAlignment": "spaceBetween"
            },
            "children": [
              {
                "type": "column",
                "properties": {
                  "crossAxisAlignment": "start"
                },
                "children": [
                  {
                    "type": "text",
                    "properties": {
                      "text": "User Profile",
                      "style": {
                        "fontSize": 20,
                        "fontWeight": "bold",
                        "color": "#FFFFFF"
                      }
                    }
                  },
                  {
                    "type": "text",
                    "properties": {
                      "text": "Welcome back, John!",
                      "style": {
                        "fontSize": 14,
                        "color": "#E0E0E0"
                      }
                    }
                  }
                ]
              },
              {
                "type": "icon",
                "properties": {
                  "icon": "person",
                  "size": 40,
                  "color": "#FFFFFF"
                }
              }
            ]
          }
        }
      },
      {
        "type": "text",
        "properties": {
          "text": "Quick Actions",
          "style": {
            "fontSize": 18,
            "fontWeight": "bold"
          }
        }
      },
      {
        "type": "sizedBox",
        "properties": { "height": 10 }
      },
      {
        "type": "row",
        "properties": {
          "mainAxisAlignment": "spaceBetween"
        },
        "children": [
          {
            "type": "button",
            "properties": {
              "text": "Add Goal",
              "onPressed": {
                "action": "toast",
                "message": "Adding a new goal..."
              }
            }
          },
          {
            "type": "button",
            "properties": {
              "text": "Settings",
              "onPressed": {
                "action": "navigate",
                "route": "/settings"
              }
            }
          }
        ]
      },
      {
        "type": "sizedBox",
        "properties": { "height": 30 }
      },
      {
        "type": "card",
        "properties": {
          "elevation": 2,
          "borderRadius": 8
        },
        "child": {
          "type": "container",
          "properties": {
            "padding": 16
          },
          "child": {
            "type": "row",
            "children": [
              {
                "type": "icon",
                "properties": {
                  "icon": "star",
                  "color": "#F5A623"
                }
              },
              {
                "type": "sizedBox",
                "properties": { "width": 10 }
              },
              {
                "type": "text",
                "properties": {
                  "text": "You have earned 500 points!",
                  "style": { "fontSize": 16 }
                }
              }
            ]
          }
        }
      }
    ]
  }
}
